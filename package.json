{
  "name": "bourbot",
  "displayName": "Bourbot",
  "version": "0.0.1",
  "description": "HipChat bot that tells you how long until you can enjoy some delicious libations",
  "author": {
    "name": "Matthew Kowalski",
    "url": "https://bitbucket.org/kwal/bourbot"
  },
  "main": "app.js",
  "scripts": {
    "start": "node --harmony app.js",
    "dev": "node dev.js"
  },
  "development": {
    "port": 3000,
    "redisEnv": "redis://localhost:6379"
  },
  "production": {
    "port": "$PORT",
    "redisEnv": "$REDISCLOUD_URL",
    "localBaseUrl": "https://bourbot.herokuapp.com"
  },
  "settings": {
    "timezone": "America/Chicago",
    "location": "the local watering hole",
    "time": 16
  },
  "license": "MIT",
  "dependencies": {
    "ac-koa": "^0.2.6",
    "ac-koa-hipchat": "^0.2.16",
    "ac-node": "^0.2.3",
    "moment": "^2.9.0",
    "moment-timezone": "^0.3.1"
  },
  "devDependencies": {
    "localtunnel": "^1.5.0",
    "nodemon": "^1.3.7"
  }
}
